<main class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/info', book: @book, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h1>Users</h1>
   <table width="50%">
   <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
   </tr>
   <% @users.each do |user| %>
   <tr align="center">
    <td>
    <%= link_to user_path(user.id) do %>
    <%= image_tag user.get_profile_image %>
    <% end %>
    </td>

    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
   </tr>
   <% end %>
   </table>
  </div>
 </div>
</main>