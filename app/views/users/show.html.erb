<main class="container">
<div class="row">
<div class="col-md-3">
<%= render 'books/info', book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table width="50%">
  <tr>
    <th> </th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
<% @books.each do |book| %>
<tr align="center">
<td>
    <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_profile_image %>
    <% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>
</table>
</div>
</div>
</main>