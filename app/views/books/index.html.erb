
<main class="container">
<div class="row">
<div class="col-md-3">
<%= render 'info', book: @book, user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<div class="border-bottom"><h1>Books</h1></div>
<table width="50%">
<tr>
  <th> </th>
  <th>Title</th>
  <th>Opinion</th>
</tr>
<div>
<% @books.each do |book| %>
<div>
<tr align="center">
<td>
<%= link_to user_path(book.user.id) do %>
<%= image_tag book.user.get_profile_image %>
<% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>
</table>
</div>
</div>
</div>
</div>
</main>