<div class="col-md-4">
<div>
  <h1>User info</h1>
<div>
  <% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

  <div class="border-bottom">
    <%= image_tag user.get_profile_image %>
  </div>
  <table width="30%">
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr align="center">
    <th>introduction</th>
    <td><%= user.introduction  %></td>
  </tr>
  </table>
</div>

<%= link_to "UserEdit", edit_user_path(user.id), class: "btn btn-secondary" %>

<div>
  <h1>New book</h1>
  <%= form_with model: book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book", class: "btn btn-secondary" %>
  <% end %>
</div>
</div>